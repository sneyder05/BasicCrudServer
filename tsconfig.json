{
  "compilerOptions": {
      "target": "es6",
      "module": "commonjs",
      "outDir": "dist",
      "lib": [
          "es2019",
          "dom"
      ],
      "moduleResolution": "node",
      "strict": true,
      "jsx": "react",
      "allowJs": true,
      "checkJs": true,
      "inlineSources": true,
      "sourceMap": true,
      "declarationMap": true,
      "declaration": true,
      "allowSyntheticDefaultImports": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "baseUrl": "src",
      "skipLibCheck": true
  },
  "exclude": [
      "./init-*.js",
      "node_modules",
      "packages/*/dist"
  ]
}